<% if (currentUser) { %>
  <div class="container chatStyle">
    <h1>Chat</h1>
    <form id="chatForm">
      <input id="chat-input" type="text" />
      <input
        id="chat-user-name"
        type="hidden"
        value="<%= currentUser.name %>"
      />
      <input id="chat-user-id" type="hidden" value="<%= currentUser._id %>" />
      <input type="submit" value="Send" />
    </form>
    <div id="chat"></div>
  </div>
<% } else { %>
  <div id="chatLogin">
    <p>Please log in to chat!</p>
  </div>
<% } %>
